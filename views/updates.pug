doctype html
html
  head
    meta(charset='utf-8')
    title= title
    link(rel='stylesheet', href='/css/style.css')
  body
    .container
      .topbar
        a(href='/') ‚Üê Return to the homepage
      h1= title

      .card
        form(method='POST', action='/update-cobj', novalidate)
          .form-grid
            each prop in properties
              .field
                label(for=prop)= labels && labels[prop] ? labels[prop] : prop
                if prop === 'bio'
                  textarea(name=prop id=prop rows='3' placeholder=(placeholders && placeholders[prop]) ? placeholders[prop] : '')
                else
                  input(type='text' name=prop id=prop required placeholder=(placeholders && placeholders[prop]) ? placeholders[prop] : '')
          button.btn(type='submit') Guardar
